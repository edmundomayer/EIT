@model es.eit.application.Views.ComplexViews.Persons_By_Department_View
@if ( User.Identity.IsAuthenticated )
{
    if ( User.IsInRole( "Administrator" ) )
    {
        <p>
            @Html.ActionLink( "Create New Person", "Create", "Person", new { idDepartment = Model.Id }, null )
        </p>
    }
}
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>
    @foreach ( var item in Model.PersonList )
    {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.Name )
            </td>
            <td>
                @Html.ActionLink( "Details", "Details", "Person", new { id = item.Id }, new { } )

                @if ( User.Identity.IsAuthenticated )
                {
                    if ( User.IsInRole( "Administrator" ) )
                    {
                        @Html.Raw( "| " ) @Html.ActionLink( "Edit", "Edit", "Person", new { id = item.Id }, new { } )
                        @Html.Raw( " | " ) @Html.ActionLink( "Delete", "Delete", "Person", new { id = item.Id }, new { } )
                    }
                }

            </td>
        </tr>
    }

</table>
